# Application Configuration
APP_NAME=PropTech API
APP_VERSION=1.0.0
DEBUG=False

# Database Configuration (MySQL)
DB_HOST=mysql
DB_PORT=3306
DB_USER=appuser
DB_PASSWORD=apppass
DB_NAME=propiedades_db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# LLM Configuration (Ollama)
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=30

# API Configuration
CORS_ORIGINS=*
API_PREFIX=/api

# Logging
LOG_LEVEL=INFO
